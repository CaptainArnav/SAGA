		.post-comments {
				padding-bottom: 9px;
				margin: 5px 0 5px;
		}

		.comments-nav {
				border-bottom: 1px solid #eee;
				margin-bottom: 5px;
		}

		.post-comments .comment-meta {
				border-bottom: 1px solid #eee;
