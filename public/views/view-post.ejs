<div class="container ">
    <div class="row">
        <div class="span8">
            <div class="row">
                <div class="span8">
                    <h1 class="justify-content-center ml-auto">
                        <%= data.post.title %>
                    </h1>
                </div>
            </div>
            <% if(typeof user != 'undefined' && user.username == data.author_username) { %>
                <form action="/post/delete/<%= data.post_id %>" method="POST">
                    <button type="submit" class="btn btn-primary">Delete</button>
                </form>
                <% } %>
                    <div class="row">
                        <div class="span6">
                            <div class="container">
                                <%- data.post.content %>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="span8">
                            <p></p>
                            <p>
                                <% if(typeof data.categoriesList != 'undefined') { %>
                                    <div class="row ml-auto mr-auto">
                                        <% data.categoriesList.forEach(category => { %>
                                            <span class="badge badge-pill badge-primary category"><%= category %></span>
                                            <% }); %>
                                    </div>
                                    <% } %>
                                        <a href="/profile/<%= data.author_username %>">@<%= data.author_username %></a> | <i class="icon-calendar"></i>
                                        <%= data.post.time_of_creation %>
                                            | <i class="icon-comment"></i>
                                            <%= data.comment.length%> comments |

                                                <% if(typeof user != 'undefined') { %>
                                                    <div>
                                                        <!-- Downvote -->
                                                        <form action="/post/downvotes/<%= data.post_id %>" method="POST">
                                                            <button id="downvote-btn" type="submit" class="fa fa-arrow-circle-down fa-2x align-self-center ml-auto" style="color: #d9534f;"></button>
                                                            <span id="downvote-count" class="align-items-center ml-3" style="color: rgb(228,20,6); font-size:1.2rem">
								<%= data.post.downvotes %>
							</span>
                                                        </form>
                                                    </div>
                                                    <div>
                                                        <!-- Upvote -->
                                                        <form action="/post/upvotes/<%= data.post_id %>" method="POST">
                                                            <button id="upvote-btn" type="submit" class="fa fa-arrow-circle-up fa-2x align-self-center ml-auto" style="color: #5cb85c;"></button>
                                                            <span id="upvote-count" class="align-items-center ml-3" style="color: #5cb85c; font-size:1.2rem;">
								<%= data.post.upvotes %>
							</span>
                                                        </form>
                                                    </div>
                                                    <% } else { %>
                                                        <div>
                                                            <!-- Downvote -->
                                                            <i id="downvote-btn" type="submit" class="fa fa-arrow-circle-down fa-2x align-self-center ml-auto" style="color: #d9534f;"></i>
                                                            <span id="downvote-count" class="align-items-center ml-3" style="color: rgb(228,20,6); font-size:1.2rem">
							<%= data.post.downvotes %>
						</span>
                                                        </div>
                                                        <div>
                                                            <!-- Upvote -->
                                                            <i id="upvote-btn" type="submit" class="fa fa-arrow-circle-up fa-2x align-self-center ml-auto" style="color: #5cb85c;"></i>
                                                            <span id="upvote-count" class="align-items-center ml-3" style="color: #5cb85c; font-size:1.2rem;">
							<%= data.post.upvotes %>
						</span>
                                                        </div>
                                                        <% } %>

                            </p>
                        </div>
                    </div>
        </div>
    </div>
    <hr>

</div>

