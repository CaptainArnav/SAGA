                                                <div class="w-100 media-body">
                                                    <div>
                                                        <p>
                                                            <%=data.child_comment[i][j].content %>
                                                        </p>
                                                    </div>

                                                    <div class="w-100 comment-meta">
                                                        <div>
                                                            <p>-
                                                                <%= moment(data.child_comment[i][j].time_of_creation).format('MMMM Do YYYY, h:mm a') %>
                                                            </p>
                                                        </div>
