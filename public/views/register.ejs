 <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<div class="container">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <!-- <i class="fas fa-user"></i> --> Register</h1>
      <%- include ('./partials/messages.ejs') %>
      <form action="/users/register" method="POST">
      
            <div class="input-field col">
          <input id="first_name" type="text" name="first_name" class="validate" value="<%= typeof first_name != 'undefined' ? first_name : '' %>"
              autofocus="" autocomplete="off" required="">
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col">
          <input id="last_name" type="text" name="last_name" class="validate" value="<%= typeof last_name != 'undefined' ? last_name : '' %>" autocomplete="off" required="">
          <label for="last_name">Last Name</label>
        </div>
                  

        <div class="input-field col">
          <input name="email" id="email" type="email" class="validate" value="<%= typeof email != 'undefined' ? email : '' %>" inputmode="email" required="" autocomplete="off">
          <label for="email">Email</label>
        </div>



        <div class="input-field col">
          
          <input name="dob" id="dob" name="dob" class="datepicker"
            value="<%= typeof dob != 'undefined' ? dob : '' %>" required="" />
            <label for="dob">Date Of Birth</label>
        </div>


      <div class="input-field col">
          <input name="username" id="username" type="text" class="validate" value="<%= typeof username != 'undefined' ? username : '' %>"
              autocomplete="off" required="">
          <label for="username">Username</label>
        </div>

        <div class="input-field col">
          <input name="password" id="password" type="password" class="validate" required="" minlength="8">
          <label for="password">Password</label>
        </div>

        <div class="input-field col">
          <input name="password2" id="password2" type="password" class="validate" required="" minlength="8">
          <label for="password2">Confirm Password</label>
        </div>

        <div class="form-group mb-2 row"><label class="col-sm-4"  for="interests">What are your interests?</label><input
            class="form-control badge-pill col-sm-8" type="text" data-role="tagsinput" data-class="label-info"
            placeholder="Add your interests" name="interests">
        </div>
        <div class="form-group mb-2 row"><label class="col-sm-4" for="qualifications">What are your qualifications?</label><input
            class="col-sm-8 form-control badge-pill" type="text" data-role="tagsinput" data-class="label-info"
            placeholder="Add your qualifications" name="qualifications">
        </div>



        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>

<script src="/assets/js/Bootstrap-Tags-Input-1.js"></script>
