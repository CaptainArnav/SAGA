<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <!-- <i class="fas fa-user"></i> -->Register</h1>
      <%- include ('./partials/messages.ejs') %>
      <form action="/users/register" method="POST">
        <div class="row">
          <div class="col-6 form-group">
            <label for="first_name">First Name</label>
            <input type="first_name" id="first_name" name="first_name" class="form-control"
              placeholder="Your first name" value="<%= typeof first_name != 'undefined' ? first_name : '' %>"
              autofocus="" autocomplete="off" required="" />
          </div>

          <div class="col-6 form-group">
            <label for="last_name">Last Name</label>
            <input type="last_name" id="last_name" name="last_name" class="form-control" placeholder="Your last name"
              value="<%= typeof last_name != 'undefined' ? last_name : '' %>" autocomplete="off" required="" />
          </div>
        </div>

        <div class="form-group row">
          <div class="col-5 pt-2">
          <label for="email">Email</label>
          </div>
          <div class="col">
          <input type="email" id="email" name="email" class="form-control" placeholder="Your email address"
            value="<%= typeof email != 'undefined' ? email : '' %>" inputmode="email" required="" autocomplete="off" />
            </div>
        </div>

        <div class="form-group row">
          <div class="col-5 pt-2">
          <label for="dob">Birthdate</label>
          </div>
          <div class="col">
          <input type="date" id="dob" name="dob" class="form-control"
            value="<%= typeof dob != 'undefined' ? dob : '' %>" required="" />
            </div>
        </div>
        <div class="form-group row">
          <div class="col-5 pt-2">
          <label for="username">Username</label>
          </div>
          <div class="col">
          <input type="username" id="username" name="username" class="form-control"
            placeholder="Think of something cool!" value="<%= typeof username != 'undefined' ? username : '' %>"
            required="" />
            </div>
        </div>
        <div class="form-group row">
          <div class="col-5 pt-2">
          <label for="password">Password</label>
          </div>
          <div class="col">
          <input type="password" id="password" name="password" class="form-control" placeholder="Top secret!"
            value="<%= typeof password != 'undefined' ? password : '' %>" required="" minlength="8" />
            </div>
        </div>
        <div class="form-group row">
          <div class="col-5 pt-2">
          <label for="password2">Confirm Password</label>
          </div>
          <div class="col">
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Top secret again!"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required="" minlength="8" />
            </div>
        </div>
        <div class="form-group row">
          <div class="col-5 pt-2">
          <label for="interests">What are your interests?</label>
          </div>
          <div class="col">
          <input
            class="form-control badge-pill" type="text" data-role="tagsinput" data-class="label-info"
            placeholder="Add your interests" name="interests" required=""
            value="<%= typeof interests != 'undefined' ? interests : '' %>">
            </div>
        </div>
        <div class="form-group row">
          <div class="col-5 pt-2">
          <label for="qualifications">What are your qualifications?</label>
          </div>
          <div class="col">
            <input
            class="form-control badge-pill" type="text" data-role="tagsinput" data-class="label-info"
            placeholder="Add your qualifications" name="qualifications" required=""
            value="<%= typeof qualifications != 'undefined' ? qualifications : '' %>">
            </div>
        </div>
        <div class="form-group">
          <label for="about">About</label>
          <textarea id="about" name="about" class="form-control" placeholder="Tell us about yourself." rows=3
            value="<%= typeof about != 'undefined' ? about : '' %>" required=""></textarea>
        </div>


        <div>
        <button type="submit" class="ml-auto mr-auto w-25 btn btn-primary btn-block">
          Register
        </button>
        </div>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>

<script src="/assets/js/Bootstrap-Tags-Input-1.js"></script>
<script src="/assets/js/Bootstrap-Tags-Input.js"></script>